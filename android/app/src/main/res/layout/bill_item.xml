<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_bill"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/button_selector">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@mipmap/head"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美国队长3"
        android:ems="10"
        android:id="@+id/tv_movie_name"
        android:textSize="18dp"
        android:layout_toRightOf="@id/iv_head"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_theater_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blabla"
        android:textColor="@color/gray2"
        android:layout_alignLeft="@+id/tv_movie_name"
        android:layout_below="@id/tv_movie_name"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单时间: "
        android:textColor="@color/gray2"
        android:layout_below="@+id/tv_theater_name"
        android:layout_alignLeft="@id/tv_theater_name"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥30"
        android:textSize="18dp"
        android:textColor="@color/orange2"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_movie_name"/>
</RelativeLayout>