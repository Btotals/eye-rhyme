<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.chenzhe.eyerhyme.activity.ChoosingProductActivity">

    <include layout="@layout/toolbar_support"/>
    <RelativeLayout
        android:id="@+id/rl_theater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:elevation="10dp"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州飞扬影城"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州大道北28号"
            android:textSize="15dp"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/gray2"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.4"
            android:textSize="25dp"
            android:textColor="@color/orange2"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/next_arrow"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_grade"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:tl_divider_color="@color/colorPrimary"
        app:tl_divider_padding="13dp"
        app:tl_divider_width="1dp"
        android:background="@drawable/button_selector"
        app:tl_indicator_color="@color/white"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/black"
        app:tl_textUnselectColor="@color/gray"
        >

    </com.flyco.tablayout.SlidingTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/product_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>
