<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.chenzhe.eyerhyme.activity.WritingMovieCommentActivity">
    <include layout="@layout/toolbar_support"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="评分"
            />
        <io.techery.properratingbar.ProperRatingBar
            android:id="@id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:prb_totalTicks="5"
            android:textSize="20dp"
            app:prb_defaultRating="0"
            app:prb_clickable="true"
            app:prb_tickNormalDrawable="@mipmap/iv_rating_normal"
            app:prb_tickSelectedDrawable="@mipmap/iv_rating_selected"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
           ></io.techery.properratingbar.ProperRatingBar>
    </LinearLayout>
    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:layout_marginTop="2dp"
        android:textSize="14dp"
        android:lines="5"
        android:gravity="top"
        android:hint="说说您对这部影片的看法，至少15字哦"
        android:background="@color/white"/>

    <Button
        android:id="@+id/bn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_2"
        android:text="提交"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="50dp"/>
</LinearLayout>
